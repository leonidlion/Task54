<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/fl_simple"
             tools:context=".fragments.SimpleFragment"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_simple"
        android:layout_alignBottom="@+id/btn_save_simple"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="@string/save_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_save_simple"/>

    <Button
        android:text="@string/random_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btn_save_simple"
        android:id="@+id/btn_random_simpl"/>
</RelativeLayout>
</FrameLayout>